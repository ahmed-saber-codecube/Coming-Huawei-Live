<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--    TextView Styles-->
    <style name="BaseTextView" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTextGreyDark</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseTextView.Title">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/colorTextGreyDark</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="BaseTextView.Title.Sub">
        <item name="android:textColor">@color/colorTextGreyDark2</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:drawablePadding">@dimen/_8dp</item>
    </style>

    <style name="BaseTextView.Name">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/colorTextGreyDark</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="BaseTextView.ItemName">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/colorTextGreyDark2</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="BaseTextView.ItemNumber">
        <item name="fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/colorTextGreyDark2</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!--    <style name="BaseTextView.ItemPrice">-->
    <!--        <item name="android:fontFamily">@font/almarai_bold</item>-->
    <!--        <item name="android:textColor">@color/colorTextBlue</item>-->
    <!--        <item name="android:textSize">@dimen/_14sp</item>-->
    <!--    </style>-->

    <style name="BaseTextView.Timer">
        <item name="fontFamily">@font/almarai_regular</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:textColor">@color/colorTextBlue</item>
    </style>


    <style name="BaseTextView.Desc">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/colorTextGreyLight2</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="BaseTextView.Desc.CardDetail">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:elevation">@dimen/_4dp</item>

        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
    </style>

    <style name="BaseTextView.Desc.Rating">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_checkbox_rating_text</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="BaseTextView.Recharge">
        <item name="android:drawableTint">@color/colorBlue</item>
        <item name="android:background">@drawable/bg_rounded_rect_border_64dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:textSize">@dimen/_12sp</item>

        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_8dp</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
    </style>

    <style name="BaseTextView.Chat">
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/colorTextGreyDark</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!--    <style name="BaseTextView.Chat.Timestamp">-->
    <!--        <item name="android:fontFamily">@font/almarai_bold</item>-->
    <!--        <item name="android:textColor">@color/colorTextGreyLight3</item>-->
    <!--        <item name="android:textSize">@dimen/_14sp</item>-->
    <!--    </style>-->


    <!--    Button Styles-->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonPlus" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_button_quantity_plus</item>
    </style>

    <style name="ButtonMinus" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_button_quantity_minus</item>
    </style>

    <style name="ButtonDeleteAll" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/ic_delete</item>
    </style>

    <style name="BaseButton.Cart">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_rounded_rect_64dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_bold</item>
    </style>

    <style name="BaseButton.Cart.New">
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTintMode">multiply</item>
        <item name="android:background">@drawable/bg_rounded_rect_64dp_new</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_bold</item>
    </style>


    <style name="NewCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="headerBackground">@color/colorPrimary</item>

        <item name="cancelButtonTintColor">@android:color/white</item>
        <item name="listMarkTintColor">@color/colorPrimary</item>
        <item name="cameraTintColor">@color/colorPrimary</item>
        <item name="checkboxButtonTintColor">@color/colorPrimary</item>

        <!--<item name="paymentMethodListItemSelector">@drawable/checkout_list_item_selector</item>-->

        <item name="checkoutButtonStyle">@style/NewCheckoutTheme.Button</item>
    </style>

    <style name="NewCheckoutTheme.Button" parent="Checkout.Button.Light">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseButton.Cart.Back">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_rounded_rect_border_64dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/colorTextBlue</item>
    </style>

    <!--EditText Styles-->
    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/colorTextEditText</item>
        <item name="android:maxLength">100</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:maxLines">1</item>

        <item name="android:paddingStart">@dimen/_24dp</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
    </style>


    <style name="EditTextOtp" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorBlue</item>
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:maxLength">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/_40sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="alertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--    Bottom Navigation Styles-->
    <style name="TextAppearanceBottomNav" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TextAppearanceBottomNav.Active">
        <item name="android:textColor">@color/colorTextBlue</item>
    </style>

    <style name="TextAppearanceBottomNav.Inactive">
        <item name="android:textColor">@color/colorTextInactive</item>
    </style>

    <!--    Chip Styles-->
    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/color_chip_bg</item>
        <item name="android:textColor">@color/color_chip_text</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="textStartPadding">@dimen/_8dp</item>
        <item name="textEndPadding">@dimen/_8dp</item>
        <item name="chipStartPadding">@dimen/_10dp</item>
        <item name="chipCornerRadius">@dimen/_8dp</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="BaseChip.NoIcon">
        <item name="chipIconEnabled">false</item>
        <item name="chipIconVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="chipStartPadding">@dimen/_8dp</item>
    </style>

    <!--    CardView Styles-->
    <style name="BaseCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <!--    RadioButton Styles-->
    <style name="BaseRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_radio_button_language</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/colorTextGreyDark2</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="BaseCheckBoxButton" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_checkbox</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/colorTextGreyDark2</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/_10dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="RadioButtonOrder" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textColor">@color/color_radio_button_order_text</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!--    CheckBox Styles-->
    <style name="CheckboxOrderStatus" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/almarai_regular</item>
        <item name="android:textColor">@color/color_checkbox_status_text</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

        <item name="android:enabled">false</item>
    </style>

    <!--    Tab Text Appearance-->
    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/almarai_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/quantum_grey</item>
        <item name="colorControlActivated">@color/quantum_yellowA700</item>
    </style>

    <style name="Basecategory">
        <item name="fontFamily">@font/almarai_regular</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

</resources>
