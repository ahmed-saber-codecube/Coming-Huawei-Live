<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_16dp"
    android:paddingEnd="@dimen/_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTimeStamp"
        style="@style/BaseTextView.Chat.Timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp"
        android:text="@string/dummy_timestamp"
        android:textColor="@color/colorTextBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLineLeft"
        android:layout_width="0dp"
        android:layout_height="@dimen/_2dp"
        android:background="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@id/textViewTimeStamp"
        app:layout_constraintEnd_toStartOf="@id/textViewTimeStamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewTimeStamp" />

    <View
        android:id="@+id/viewLineRight"
        android:layout_width="0dp"
        android:layout_height="@dimen/_2dp"
        android:background="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="@id/textViewTimeStamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewTimeStamp"
        app:layout_constraintTop_toTopOf="@id/textViewTimeStamp" />


</androidx.constraintlayout.widget.ConstraintLayout>