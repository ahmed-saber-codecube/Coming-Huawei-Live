<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_rect_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVouchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:drawableBottom="@drawable/img_voucher"
        android:drawablePadding="@dimen/_16dp"
        android:text="@string/text_vouchers"
        android:textColor="@color/colorTextGreyDark"
        android:textSize="@dimen/_24sp"
        style="@style/BaseTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_10dp"
        app:layout_constraintEnd_toStartOf="@id/textViewVoucherInfo1"
        app:layout_constraintTop_toTopOf="@id/textViewVoucherInfo1"
        app:srcCompat="@drawable/ic_dot" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVoucherInfo1"
        style="@style/BaseTextView.Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24dp"
        android:text="@string/text_voucher_info_1"
        android:textColor="@color/colorTextGreyDark"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewVouchers" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_10dp"
        app:layout_constraintEnd_toStartOf="@id/textViewVoucherInfo2"
        app:layout_constraintTop_toTopOf="@id/textViewVoucherInfo2"
        app:srcCompat="@drawable/ic_dot" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVoucherInfo2"
        style="@style/BaseTextView.Desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/text_voucher_info_2"
        android:textColor="@color/colorTextGreyDark"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="@id/textViewVoucherInfo1"
        app:layout_constraintStart_toStartOf="@id/textViewVoucherInfo1"
        app:layout_constraintTop_toBottomOf="@id/textViewVoucherInfo1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_10dp"
        app:layout_constraintEnd_toStartOf="@id/textViewVoucherInfo3"
        app:layout_constraintTop_toTopOf="@id/textViewVoucherInfo3"
        app:srcCompat="@drawable/ic_dot" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVoucherInfo3"
        style="@style/BaseTextView.Desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:text="@string/text_voucher_info_3"
        android:textColor="@color/colorTextGreyDark"
        android:textSize="@dimen/_16sp"
        app:layout_constraintEnd_toEndOf="@id/textViewVoucherInfo2"
        app:layout_constraintStart_toStartOf="@id/textViewVoucherInfo2"
        app:layout_constraintTop_toBottomOf="@id/textViewVoucherInfo2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonGotIt"
        style="@style/BaseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_32dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:text="@string/text_got_it"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewVoucherInfo3" />


</androidx.constraintlayout.widget.ConstraintLayout>